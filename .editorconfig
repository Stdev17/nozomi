root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
indent_size = 2
indent_style = tab

[*.json]
indent_style = space

[*.{js,ts,tsx}]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.{yml, yaml}]
indent_size = 2
indent_style = space

[*.csproj]
indent_size = 2
indent_style = space

[*.cs]
indent_size = 4
indent_style = space
end_of_line = crlf

[*.template]
indent_style = space
indent_size = 4
end_of_line = crlf
